menuconfig MAVWRAP
	bool "MAVLink Wrapper Driver"
	help
	  Enable MAVLink protocol wrapper driver with transport abstraction.
	  Supports UART and Network (UDP/TCP) transports.

if MAVWRAP

config MAVWRAP_LOG_LEVEL
	int "MAVLink Wrapper Log Level"
	default 3
	range 0 4
	help
	  Log level for MAVLink wrapper driver:
	    0 = OFF
	    1 = ERROR
	    2 = WARNING
	    3 = INFO
	    4 = DEBUG

config MAVWRAP_INIT_PRIORITY
	int "MAVLink Wrapper Initialization Priority"
	default 90
	range 0 99
	help
	  Initialization priority for MAVLink wrapper driver.
	  Should be initialized after transport devices (UART, Network).

config MAVWRAP_RX_RING_SIZE
	int "RX Ring Buffer Size (bytes)"
	default 1024
	range 512 8192
	help
	  Size of the ring buffer for receiving MAVLink data.
	  Should be at least 2x MAVLINK_MAX_PACKET_LEN (263 bytes).
	  Larger buffers handle burst traffic better.

config MAVWRAP_RX_STACK_SIZE
	int "RX Thread Stack Size (bytes)"
	default 2048
	range 1024 8192
	help
	  Stack size for the MAVLink RX processing thread.

config MAVWRAP_RX_THREAD_PRIORITY
	int "RX Thread Priority"
	default 5
	range 0 15
	help
	  Priority of the MAVLink RX processing thread.
	  Lower values = higher priority.


config MAVWRAP_TRANSPORT_UART
	bool "Enable UART Transport"
	default y
	depends on UART_INTERRUPT_DRIVEN || UART_ASYNC_API
	help
	  Enable UART transport support for MAVLink.
	  Requires either UART interrupt or async API support.

if MAVWRAP_TRANSPORT_UART

config MAVWRAP_UART_TX_TIMEOUT_MS
	int "UART TX Timeout (milliseconds)"
	default 1000
	range 100 10000
	help
	  Timeout for UART transmission operations.

config MAVWRAP_UART_RX_TIMEOUT_MS
	int "UART RX Timeout (milliseconds)"
	default 100
	range 10 5000
	help
	  Timeout for UART async RX operations (DMA mode only).

config MAVWRAP_UART_DMA_RX_BUF_SIZE
	int "UART DMA RX Buffer Size (bytes)"
	default 512
	range 263 2048
	depends on UART_ASYNC_API
	help
	  Size of each DMA RX buffer (double-buffered).
	  Must be >= MAVLINK_MAX_PACKET_LEN (263 bytes).

endif # MAVWRAP_TRANSPORT_UART


config MAVWRAP_TRANSPORT_NETIF
	bool "Enable Network Transport"
	default y
	depends on NETWORKING
	select NET_UDP
	select NET_SOCKETS
	help
	  Enable network transport (UDP/TCP) support for MAVLink.

if MAVWRAP_TRANSPORT_NETIF

config MAVWRAP_NETIF_DHCP
	bool "Enable DHCP Support"
	default y
	depends on NET_DHCPV4
	help
	  Enable DHCP client support for network transport.

endif # MAVWRAP_TRANSPORT_NETIF

endif # MAVWRAP
